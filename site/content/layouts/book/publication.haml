%section.publication
  %header
    %h1 Publication Details

  %p= "Publication Date: #{book.publication_date}"

  -paperback = book.paperback
  %p
    Paperback #{paperback.price}
    -if paperback.isbn
      | #{isbn10(paperback.isbn, '-')}
      | #{isbn13(paperback.isbn, '-')}
    -if paperback.pages
      | #{paperback.pages} pages

  -ebook = book.ebook
  %p
    Ebook #{ebook.price}
    -if ebook.isbn
      | #{isbn10(ebook.isbn, '-')}
      | #{isbn13(ebook.isbn, '-')}
